.pagination
  .pagination__alpha
    %a.pagination__link.pagination__link--prev &lt;
    %a.pagination__link.pagination__link--first First

  .pagination__numbers
    - for num in 1..pagination[:total]
      - if pagination[:current] != num
        %a.pagination__link
          = num
      - else
        .pagination__link.pagination__link--current
          = num
  
  .pagination__omega
    %a.pagination__link.pagination__link--last Last
    %a.pagination__link.pagination__link--next &gt;