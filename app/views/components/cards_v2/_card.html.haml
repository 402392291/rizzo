%article{ class: card_classes(properties).join(" ") }
  .card__mask

    %a{ href: properties[:url] }

      - if properties[:image_url]
        %figure.card__figure
          = safe_image_tag(properties[:image_url], class: "card__figure__img", alt: properties[:image_alt])

        - if properties[:user]
          = ui_component("user_attribution", properties: properties[:user])

      .card__content

        .card__content__title
          = properties[:title]
        .card__content__desc
          = properties[:description]

      = render :partial => "/components/cards_v2/partials/meta", :locals => { :properties => properties }

  = render :partial => "/components/cards_v2/partials/tags", :locals => { :properties => properties }
  = render :partial => "/components/cards_v2/partials/attribution", :locals => { :properties => properties }
