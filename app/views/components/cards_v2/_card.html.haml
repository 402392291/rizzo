%article{ class: card_classes(properties).join(" ") }
  .card__mask

    %a{ href: properties[:url] }

      - if properties[:image_url]
        %figure.card__figure
          = safe_image_tag(properties[:image_url], class: "card__figure__img", alt: properties[:image_alt])

      .card__content

        - if properties[:context]
          .card__content__context
            = properties[:context]
        %h1.card__content__title
          = properties[:title]
        %p.card__content__desc
          = properties[:description]

      = render :partial => "/components/cards_v2/partials/footer", :locals => { :properties => properties }

  = render :partial => "/components/cards_v2/partials/tags", :locals => { :properties => properties }
