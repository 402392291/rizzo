#js-lightbox.lightbox
  .lightbox__wrapper.js-lightbox-wrapper
    .lightbox__content
      .lightbox__close.icon--cross.js-lightbox-close
      .js-lightbox-content
  .lightbox__controls-wrapper    
    .lightbox__controls.js-lightbox-controls
      %a.js-lightbox-arrow.lightbox__arrow.lightbox__arrow-left.is-hidden.js-lightbox-previous.icon--chevron-left--after.icon--white--after.tooltip--container.tooltip--hover
        .js-lightbox-arrow__text.lightbox-arrow__text.tooltip.tooltip--above.icon--tapered-arrow-down--after
      %a.js-lightbox-arrow.lightbox__arrow.lightbox__arrow-right.is-hidden.js-lightbox-next.icon--chevron-right--before.icon--white--before.tooltip--container.tooltip--hover
        .js-lightbox-arrow__text.lightbox-arrow__text.tooltip.tooltip--above.icon--tapered-arrow-down--after
