%article.card.card--link.card--single.card--extended-content--half.js-single.js-card{ class: "card--link--#{card[:title].downcase}"}
  %a.link--wrapper{href: card[:url]}
    - if card[:count]
      %span.card__item-count
        = card[:count]
    %figure.card__hero
      = safe_image_tag("cards/#{card[:title].downcase}.png", class: 'card__image', alt: "#{card[:title]}", lazyload: defined?(lazyload))
    .card__content
      %span.card__context
        Collection
      %h2.card__name.js-card-name
        #{card[:title]}
        - if defined? place
          in #{place}
