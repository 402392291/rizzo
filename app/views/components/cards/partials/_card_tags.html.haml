- if card[:topchoice] or card[:prices]
  .card__tags
    - if card[:prices] && card[:prices][currency.to_s].present? && card[:prices][currency.to_s] > 0
      = render :partial => '/components/cards/partials/card_price', :locals => { :card => card, :price_is_from => true }
    - if card[:topchoice]
      .tag.tag--badge.tag--top-choice
        .tag--badge__content.icon--collar--after.icon--lp-blue--after
          .icon--top-choice.icon--white
            Top Choice
