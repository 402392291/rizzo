%article.card.card--single.card--poi.card--poi--article.icon--article--white--before.js-card.js-single{class: card[:thumbnail] ? 'card--small-image card--extended-content' : 'card--no-image' }

  %a.link--wrapper{href: card[:url]}
    - if card[:thumbnail]
      %figure.card__hero
        = safe_image_tag(card[:thumbnail], class: 'card__image', alt: "#{card[:title]}", lazyload: defined?(lazyload))
    
    .card__content
      %span.card__context
        Article
      %h2.card__name
        = card[:title]
      
      - if card[:description]
        %p.card__description
          = raw card[:description]

    - if card[:post_date]
      .card__footer
        %time.text-icon--clock{datetime: card[:post_date]}
          = prettify_date(card[:post_date])
