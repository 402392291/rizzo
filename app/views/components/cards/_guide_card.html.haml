:ruby
  css_classes = [
    "card",
    "card--guide",
    card[:image_url] ? "card--small-image card--extended-content" : "card--no-image",
    card[:double?] ? "card--double card--full-image" : "card--single",
  ].join(" ")

%article.js-card{class: css_classes}

  %a.link--wrapper{href: card[:url]}

    .card__tags
      - if card[:prices] && card[:prices][currency.to_s].present? && card[:prices][currency.to_s] > 0
        = render :partial => "/components/cards/partials/card_price", :locals => { :card => card, :icon => card[:price_icon] }

    = render :partial => "/components/cards/partials/card_content", :locals => { :card => card }

    %footer.card__footer
      %span.btn.btn--yellow.btn--full-width
        Buy now
