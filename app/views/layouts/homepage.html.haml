%head
  = render 'layouts/core/head', responsive: true, homepage: true
  %meta{name:"viewport", content:"width=device-width, initial-scale=1"}
  = render 'layouts/core/inline_js/require_js_config'
  - if (yield :async_js).present?
    = render 'layouts/core/inline_js/require_js_async', script_name: "#{yield :async_js}"

%body.responsive.homepage
  .wrapper
    = render 'layouts/core/snippets/accessibility'
    = render 'layouts/core/snippets/primary_navigation_bar', user_nav: true, responsive: true, homepage: true

    .row.row--content#js-row--content
      = yield

    .wrap--footer
      = render 'layouts/core/snippets/body_footer', responsive: true

    .js-config.is-hidden
      = render 'layouts/core/snippets/footer_js'
      = render 'layouts/core/inline_js/img_loader'

    %div.ad-oneByOne#js-ad-oneByOne

    - if defined? Variant
      /
        = "build: #{Variant.full_namespace}"


