.row.row--footer--about
  .row__inner.row__inner--footer
    .row__inner--left
      %a.media--lp-logo--footer(href='http://www.lonelyplanet.com')
      %nav.nav--footer--base.nav__item
        - footer_nav_about_items.each do |item|
          %a.nav--footer--base__item.nav__item{href: item[:url]}<
            = item[:title].html_safe
    .row__inner--right
      .nav--social.row__inner--right__nav
        .nav--social__title.nav__item Follow us
        .nav--social__inner.nav__item
          %nav
            - social_media_nav.each do |item|
              %a.nav__item{href: "#{item[:url]}", class: "icon--regular sprite-core--standard icon--#{item[:title]}"}


  
