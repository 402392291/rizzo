.row.row--primary

  .row__inner--left
    %a.media--lp-logo--head(href='http://www.lonelyplanet.com')
    %nav.nav--primary.nav__item
      - core_navigation_items.each do |n|
        - if n[:submenu]
          .nav__item.nav__item--submenu.nav__submenu__trigger
            = n[:title]
            .nav__submenu
              %nav.nav__submenu__content.nav__submenu__content--bookings.js-submenu
                - n[:submenu].each do |sub|
                  %a{ href: sub[:uri], class: "nav__submenu__item nav__submenu__item--#{sub[:style]}"}<
                    = sub[:title]
        - else
          %a.nav__item.nav__item--primary{ href: n[:uri] }<
            = n[:title]

  .row__inner--right

    .search--primary.row__inner--right__nav
      %form.search__form{:action => host_with_subdomain_and_path("www", "searchResult"), :method => "get" }
        %label.accessibility(for='search-q')
          Search
        %input.search__input.search__input--primary.js-primary-search(type="search" id="search" maxlength="2048" name="q" value="" autocomplete="off" tabindex="1")
        %button.accessibility(type="submit" id="search-q-submit" name="search-q-submit")

    - if user_nav
      %nav.nav--primary--user.js-user-nav.row__inner--right__nav
        %a.nav__item--primary.nav__item.user-basket.js-user-basket(href='//shop.lonelyplanet.com/cart/view')
          %span.user-basket__icon
          %span.user-basket__text Your bag
          %span.user-basket__items.js-basket-items