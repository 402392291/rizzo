.row.row--sitemap#js-footer-nav
  .row__inner.row__inner--footer.row--sitemap__inner
    .nav--stacked.col--footer
      %a.js-nav-item.title--footer.title--list--footer(href='/destinations') Destinations
      - footer_nav_destination_items.each do |destination|
        %a.js-nav-item.nav__item.nav__item--sitemap.nav__item--footer{href: "/#{destination[:url]}"}<
          = destination[:title]

    .nav--stacked.col--footer
      %a.js-nav-item.title--footer.title--list--footer(href='/shop') Shop
      - footer_nav_shop_items.each do |shop|
        %a.js-nav-item.nav__item.nav__item--sitemap.nav__item--footer{href: "/shop/#{shop[:url]}"}<
          = shop[:title]

    .nav--stacked.col--footer
      %a.js-nav-item.title--footer.title--list--footer(href='/thorntree') Thorn Tree Forum
      - footer_nav_thorntree_items.each do |thorntree|
        %a.js-nav-item.nav__item.nav__item--sitemap.nav__item--footer{href: "/thorntree/#{thorntree[:url]}"}<
          = thorntree[:title]

    .nav--stacked.col--footer
      %a.js-nav-item.title--footer.title--list--footer(href='/themes') Themes
      - footer_nav_themes_items.each do |theme|
        %a.js-nav-item.nav__item.nav__item--sitemap.nav__item--footer{href: "/themes/#{theme[:url]}"}<
          = theme[:title]

    .nav--stacked.col--footer
      %a.js-nav-item.title--footer.title--list--footer(href='/bookings') Travel Booking
      - footer_nav_travel_bookings_items.each do |booking|
        %a.js-nav-item.nav__item.nav__item--sitemap.nav__item--footer{href: "/#{booking[:url]}"}<
          = booking[:title]

    .col--footer--last
      %span.title--footer.title--list--footer Join our mailing list
      %p.nav__item--footer
        Add your email here to receive all your travel inspiration, trips and exclusive offers
      %form.newsletter--footer(action='http://www.lonelyplanet.com/newsletter/subscribe_footer.php' method='post')
        %label.title--footer.polyfill--placeholder.newsletter--placeholder Email
        %input.input--small--newsletter(type='text' id='newsletter-email' autocomplete='off' name='newsletter-email' placeholder='your@email.com')
        .dropdown.dropdown--country.js-select-country
          %label.dropdown__value.dropdown__value--country.js-select-overlay(href='#select-country')
            Select country
          %select.dropdown__select.js-select(name='newsletter-country' id='countrySelect')
            - footer_newsletter_country_items.each do |country|
              %option(value="#{country[:title]}")
                = country[:title]
        %input.btn--regular.btn--green(type='submit' title='Subscribe Newsletter' value='Sign up')
