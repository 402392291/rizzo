%article.card.card--single.card--poi.card--poi--activity{class: stack_item.image_url ? 'card--small-image card--extended-content' : 'card--no-image' }
  %a.link--wrapper(href="/the-netherlands/amsterdam/hotels/cocomama")
    - if stack_item.image_url
      %figure.card__hero.obj-media__img
        = image_tag('activity.jpg', class: 'portrait card__image')
    .card__tags
      .card__tag.card__tag--price
        .card__tag__inner--price
          from
          %span.card__tag__price--price
            %span.card__tag__price--curr
              &pound;
            %span.js-price
              95
    %section.card__content.obj-media__body
      %span.card__context
        Activity
      %h1.card__name.js-card-name
        Buenos Aires Tango Show, Dinner and Dance Lessons
      %p.card__description
        This 3.5 hour evening tour allows you to mingle with the locals
        at the best "milongas" in town!
