= render 'styleguide/partials/shared'

- require "ostruct"
- sliders = YAML.load(File.read(File.expand_path('../../../../data/styleguide/slider_stubs.yml', __FILE__)))

.card.styleguide-intro.copy--body.context--content
  %h1.copy--h1 Slider
  %p
    Responsive image slider component

- sliders.each_with_index do |slider, i|
  = sg_component("slider", properties: slider, count: i, card_style: true, full_width: true)
